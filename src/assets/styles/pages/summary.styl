.general-summary
  display inline-block
  min-width 300px
  box-sizing border-box
  margin-top 48px
  width 73.35%
  height 21px
  position relative
  
  .general-container
    width 100%
    height 21px
    position absolute
    top 0
    left 0
    border-radius 15px
    border 1px solid #e5e5e5
  
  .general-progress
    top 0
    background-color #bb0150
    width 25%
    height 21px;
    border-radius 15px
    display flex
    padding-right 7px
    justify-content flex-end
    align-items center
    position absolute
    left 0
    
    span
      font-size .75em
      color white
      font-weight bold

.summary-divider
  width 88px
  height 1px
  background-color #dedede
  display block
  margin-left auto
  margin-right auto
  margin-top 63px
  margin-bottom 41px

.summary-row
  margin-top 68px
  margin-right auto
  margin-left auto
  width 73.35%
  display flex
  
  &.income
    margin-top 75px
    
  &.professionals
    margin-top 75px
  
  &.section
    margin-top 25px
  
  .info svg
    height 13px
    width 13px
  
  .income svg
    width 17px
    height 11px
  
  .professionals 
    svg
      width 17px
      height 11px
    
    span
      color #9b9b9b
    
  .operation-lawyers svg
    width 15px
    height 15px
  
  .administrative svg
    width 15px
    height 15px
  
  .structure svg
    width 15px
    height 16px
  
  .bonds 
    svg
      width 12px
      height 12px
     
    span
       color #9b9b9b
  
  .mercha-and-promotion
    svg
      width 15px
      height 11px
  
  .ti
    svg
      width 18px
      height 15px
  
  .increments
    svg
      width 15px
      height 13px
  
  .benefits
    svg
      width 10px
      height 17px
  
  .other-benefits
    svg
      width 13px
      height 12px
  
  
  .summary-category
    color #9b9b9b
    display flex
    align-items center
    width 173px
    margin-right 20px
  
    svg
      color #788c9d
      margin-right 18px
    
    p
      display inline-block
      width 141px
      font-size .875em
      margin 0
      text-align left
    
    &.operation-lawyers p
      font-size .8356em
      
  .category-summary
    width calc(100% - 190px)
    height 19px
    display inline-block
    position relative
    
    
    .category-container
      width 100%
      height 19px
      position absolute
      top 0
      left 0
      border-radius 15px
      border 1px solid #e5e5e5
  
    .category-progress
      color #fff
      height 19px
      background-color #788c9d
      border-radius 15px
      position absolute
      top 0
      left 0
      display flex
      padding-right 7px
      justify-content flex-end
      align-items center
      
      span
        font-size .705em
      
      &.info-progress
        width 25%
      
      &.income-progress
        width 100%
      
      &.professionals-progress
        display none
      
      &.operation-lawyers-progress
        width 25%
      
      &.administratives-progress
        width 50%
      
      &.structure-progress
        width 50%
      
      &.bonds-progress
        display none
      
      &.mercha-and-promotion-progress
        width 30%
      
      &.ti-progress
        width 30%
      
      &.increments-progress
        width 30%
      
      &.benefits-progress
        width 30%
      
      &.other-benefits-progress
        width 5%