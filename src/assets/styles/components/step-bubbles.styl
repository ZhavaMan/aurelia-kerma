.step-bubbles
  display flex
  align-items center
  justify-content center
  width auto
  margin-bottom 20px
  
  &:last-child
    display none
  
  .bubble
    color #ffffff
    background-color #e5e5e5
    width 26px
    height 26px
    display inline-block
    border-radius 50%
    display flex
    justify-content center
    align-items center
    font-size .75em
    font-weight bold
    
    p
      margin 0
      line-height 4px
    
    &.step-in
      background-color #bb0150

  .linkage
    display inline-block
    background-color #e5e5e5
    height 2px
    width 37px
  